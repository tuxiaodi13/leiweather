<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="bai.leiweather" >
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/tudilogo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="bai.leiweather.activity.LoginActivity"
            android:label="小蕾天气">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.WeatherActivity">
        </activity>
        <activity android:name=".activity.ChooseAreaActivity">
        </activity>
        <service android:name="bai.leiweather.service.AutoUpdateWeather">
        </service>
        <receiver android:name=".receiver.AlarmReceiver">
        </receiver>
    </application>


</manifest>
